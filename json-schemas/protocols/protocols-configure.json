{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://identity.foundation/dwn/json-schemas/protocols-configure.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "authorization",
    "descriptor"
  ],
  "properties": {
    "authorization": {
      "$ref": "https://identity.foundation/dwn/json-schemas/general-jws.json"
    },
    "descriptor": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "interface",
        "method",
        "protocol",
        "dateCreated",
        "types",
        "definition"
      ],
      "properties": {
        "interface": {
          "enum": [
            "Protocols"
          ],
          "type": "string"
        },
        "method": {
          "enum": [
            "Configure"
          ],
          "type": "string"
        },
        "protocol": {
          "type": "string"
        },
        "dateCreated": {
          "type": "string"
        },
        "types": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "schema": {
                  "type": "string"
                },
                "dataFormats": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "definition": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "$ref": "https://identity.foundation/dwn/json-schemas/protocol-rule-set.json"
            }
          }
        }
      }
    }
  }
}