{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://identity.foundation/dwn/json-schemas/events-filter.json",
  "type": "object",
  "minProperties": 1,
  "additionalProperties": false,
  "required": [
    "filter"
  ],
  "properties": {
    "filter": {
      "type": "object",
      "additionalProperties": false,
      "minProperties": 1,
      "properties": {
        "interfaces": {
          "type": "array"
        },
        "methods":{
          "type": "array"
        },
        "protocol": {
          "type": "string"
        },
        "protocolPath": {
          "type": "string"
        },
        "attester": {
          "$ref": "https://identity.foundation/dwn/json-schemas/defs.json#/definitions/did"
        },
        "recipient": {
          "$ref": "https://identity.foundation/dwn/json-schemas/defs.json#/definitions/did"
        },
        "contextId": {
          "type": "string"
        },
        "schema": {
          "type": "string"
        },
        "recordId": {
          "type": "string"
        },
        "parentId": {
          "type": "string"
        },
        "dataFormat": {
          "type": "string"
        },
        "dateCreated": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": false,
          "properties": {
            "from": {
              "$ref": "https://identity.foundation/dwn/json-schemas/defs.json#/definitions/date-time"
            },
            "to": {
              "$ref": "https://identity.foundation/dwn/json-schemas/defs.json#/definitions/date-time"
            }
          }
        }
      }
    },
    "watermark": {
      "type": "string"
    }
  }
}