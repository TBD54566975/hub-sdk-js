{
  "$id": "https://identity.foundation/dwn/json-schemas/protocol-rule-set.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$encryption": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "rootKeyId": {
          "type": "string"
        },
        "publicKeyJwk": {
          "$ref": "https://identity.foundation/dwn/json-schemas/public-jwk.json"
        }
      }
    },
    "$actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "oneOf": [
          {
            "required": [
              "who",
              "can"
            ],
            "additionalProperties": false,
            "properties": {
              "who": {
                "type": "string",
                "enum": [
                  "anyone"
                ]
              },
              "can": {
                "type": "string",
                "enum": [
                  "read",
                  "write"
                ]
              }
            }
          },
          {
            "required": [
              "who",
              "ofRecord",
              "can"
            ],
            "additionalProperties": false,
            "properties": {
              "who": {
                "type": "string",
                "enum": [
                  "author",
                  "recipient"
                ]
              },
              "ofRecord": {
                "type": "object",
                "properties": {
                  "atPath": {
                    "type": "string"
                  },
                  "inGroup": {
                    "type": "string",
                    "enum": [
                      "any",
                      "context",
                      "ancestors"
                    ]
                  }
                }
              },
              "can": {
                "type": "string",
                "enum": [
                  "read",
                  "write"
                ]
              }
            }
          }
        ]
      }
    }
  },
  "patternProperties": {
    "^[^$].*": {
      "$ref": "https://identity.foundation/dwn/json-schemas/protocol-rule-set.json"
    }
  }
}
