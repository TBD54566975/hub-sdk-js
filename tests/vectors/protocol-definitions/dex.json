{
  "types": {
    "ask": {
      "schema": "https://tbd/website/tbdex/ask",
      "dataFormats": ["application/json"]
    },
    "offer": {
      "schema": "https://tbd/website/tbdex/offer",
      "dataFormats": ["application/json"]
    },
    "fulfillment": {
      "schema": "https://tbd/website/tbdex/fulfillment",
      "dataFormats": ["application/json"]
    }
  },
  "records": {
    "ask": {
      "$actions": [
        {
          "who": "anyone",
          "can": "write"
        }
      ],
      "records": {
        "offer": {
          "$actions": [
            {
              "who": "recipient",
              "of": "ask",
              "can": "write"
            }
          ],
          "records": {
            "fulfillment": {
              "$actions": [
                {
                  "who": "recipient",
                  "of": "ask/offer",
                  "can": "write"
                }
              ]
            }
          }
        }
      }
    }
  }
}