{
  "recordDefinitions": [
    {
      "id": "ask",
      "schema": "https://tbd/website/tbdex/ask"
    },
    {
      "id": "offer",
      "schema": "https://tbd/website/tbdex/offer"
    },
    {
      "id": "fulfillment",
      "schema": "https://tbd/website/tbdex/fulfillment"
    }
  ],
  "records": {
    "ask": {
      "$actions": [
        {
          "who": "anyone",
          "can": "write"
        }
      ],
      "records": {
        "offer": {
          "$actions": [
            {
              "who": "recipient",
              "of": "ask",
              "can": "write"
            }
          ],
          "records": {
            "fulfillment": {
              "$actions": [
                {
                  "who": "recipient",
                  "of": "ask/offer",
                  "can": "write"
                }
              ]
            }
          }
        }
      }
    }
  }
}