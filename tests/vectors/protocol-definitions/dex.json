{
  "recordDefinitions": [
    {
      "id": "ask",
      "schema": "https://tbd/website/tbdex/ask"
    },
    {
      "id": "offer",
      "schema": "https://tbd/website/tbdex/offer"
    },
    {
      "id": "fulfillment",
      "schema": "https://tbd/website/tbdex/fulfillment"
    }
  ],
  "records": {
    "ask": {
      "actions": [
        {
          "actor": "anyone",
          "can": ["write"]
        }
      ],
      "records": {
        "offer": {
          "actions": [
            {
              "actor": "recipient",
              "of": "ask",
              "can": ["write"]
            }
          ],
          "records": {
            "fulfillment": {
              "actions": [
                {
                  "actor": "recipient",
                  "of": "ask/offer",
                  "can": ["write"]
                }
              ]
            }
          }
        }
      }
    }
  }
}