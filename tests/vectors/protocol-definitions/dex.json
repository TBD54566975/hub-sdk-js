{
  "recordDefinitions": [
    {
      "id": "ask",
      "schema": "https://tbd/website/tbdex/ask"
    },
    {
      "id": "offer",
      "schema": "https://tbd/website/tbdex/offer"
    },
    {
      "id": "fulfillment",
      "schema": "https://tbd/website/tbdex/fulfillment"
    }
  ],
  "records": {
    "ask": {
      "allow": [
        {
          "actor": "anyone",
          "actions": ["write"]
        }
      ],
      "records": {
        "offer": {
          "allow": [
            {
              "actor": "recipient",
              "protocolPath": "ask",
              "actions": ["write"]
            }
          ],
          "records": {
            "fulfillment": {
              "allow": [
                {
                  "actor": "recipient",
                  "protocolPath": "ask/offer",
                  "actions": ["write"]
                }
              ]
            }
          }
        }
      }
    }
  }
}