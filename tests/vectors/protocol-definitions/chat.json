{
  "protocol": "http://chat-protocol.xyz",
  "published": true,
  "types": {
    "thread": {
      "schema": "thread",
      "dataFormats": [
        "application/json"
      ]
    },
    "message": {
      "schema": "message",
      "dataFormats": [
        "application/json"
      ]
    }
  },
  "structure": {
    "thread": {
      "$actions": [
        {
          "who": "anyone",
          "can": "write"
        },
        {
          "who": "author",
          "ofRecord": {
            "atPath": "thread",
            "inGroup": "ancestors"
          },
          "can": "read"
        },
        {
          "who": "recipient",
          "ofRecord": {
            "atPath": "thread",
            "inGroup": "ancestors"
          },
          "can": "read"
        }
      ],
      "message": {
        "$actions": [
          {
            "who": "anyone",
            "can": "write"
          },
          {
            "who": "author",
            "ofRecord": {
              "atPath": "thread/message",
              "inGroup": "ancestors"
            },
            "can": "read"
          },
          {
            "who": "recipient",
            "ofRecord": {
              "atPath": "thread/message",
              "inGroup": "ancestors"
            },
            "can": "read"
          }
        ]
      }
    }
  }
}
