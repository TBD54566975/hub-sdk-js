{
  "protocol": "http://stackoverflow-protocol.xyz",
  "published": true,
  "types": {
    "question": {
      "schema": "question",
      "dataFormats": [
        "application/json"
      ]
    },
    "answer": {
      "schema": "message",
      "dataFormats": [
        "application/json"
      ]
    }
  },
  "structure": {
    "question": {
      "$actions": [
        {
          "who": "anyone",
          "can": "write"
        }
      ],
      "answer": {
        "$actions": [
          {
            "who": "author",
            "of": "question",
            "can": "write"
          }
        ]
      }
    }
  }
}
