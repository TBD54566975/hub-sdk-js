{
  "protocol": "http://stackoverflow-protocol.xyz",
  "published": true,
  "types": {
    "question": {
      "schema": "groupChat",
      "dataFormats": [
        "application/json"
      ]
    },
    "answer": {
      "schema": "message",
      "dataFormats": [
        "application/json"
      ]
    }
  },
  "structure": {
    "question": {
      "$actions": [
        {
          "who": "anyone",
          "can": "write"
        }
      ],
      "answer": {
        "$actions": [
          {
            "who": "author",
            "ofRecord": {
              "atPath": "question",
              "inGroup": "any"
            },
            "can": "write"
          }
        ]
      }
    }
  }
}
