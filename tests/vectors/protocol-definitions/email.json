{
  "protocol": "http://email-protocol.xyz",
  "published": true,
  "types": {
    "email": {
      "schema": "email",
      "dataFormats": [
        "text/plain"
      ]
    }
  },
  "structure": {
    "email": {
      "$actions": [
        {
          "who": "anyone",
          "can": "write"
        },
        {
          "who": "author",
          "ofRecord": {
            "atPath": "email",
            "inGroup": "ancestors"
          },
          "can": "read"
        },
        {
          "who": "recipient",
          "ofRecord": {
            "atPath": "email",
            "inGroup": "ancestors"
          },
          "can": "read"
        }
      ],
      "email": {
        "$actions": [
          {
            "who": "anyone",
            "can": "write"
          },
          {
            "who": "author",
            "ofRecord": {
              "atPath": "email/email",
              "inGroup": "ancestors"
            },
            "can": "read"
          },
          {
            "who": "recipient",
            "ofRecord": {
              "atPath": "email/email",
              "inGroup": "ancestors"
            },
            "can": "read"
          }
        ]
      }
    }
  }
}
