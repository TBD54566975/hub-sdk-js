{
  "types": {
    "message": {
      "schema": "messageSchema",
      "dataFormats": ["text/plain"]
    },
    "reply": {
      "schema": "replySchema",
      "dataFormats": ["text/plain"]
    },
    "image": {
      "schema": "imageSchema",
      "dataFormats": ["image/jpeg"]
    },
    "caption": {
      "schema": "captionSchema",
      "dataFormats": ["text/plain"]
    }
  },
  "records": {
    "message": {
      "$actions": [
        {
          "who": "anyone",
          "can": "write"
        }
      ],
      "records": {
        "reply": {
          "$actions": [
            {
              "who": "recipient",
              "of": "message",
              "can": "write"
            }
          ]
        }
      }
    },
    "image": {
      "$actions": [
        {
          "who": "anyone",
          "can": "read"
        },
        {
          "who": "anyone",
          "can": "write"
        }
      ],
      "records": {
        "caption": {
          "$actions": [
            {
              "who": "anyone",
              "can": "read"
            },
            {
              "who": "author",
              "of": "image",
              "can": "write"
            }
          ]
        },
        "reply": {
          "$actions": [
            {
              "who": "author",
              "of": "image",
              "can": "read"
            },
            {
              "who": "recipient",
              "of": "image",
              "can": "write"
            }
          ]
        }
      }
    }
  }
}