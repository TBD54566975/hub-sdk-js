{
  "protocol": "http://chat-protocol.xyz",
  "published": true,
  "types": {
    "chat": {
      "schema": "chat",
      "dataFormats": [
        "application/json"
      ]
    },
    "friend": {
      "schema": "invite",
      "dataFormats": [
        "application/json"
      ]
    }
  },
  "structure": {
    "chat": {
      "$actions": [
        {
          "who": "recipient",
          "of": "friend",
          "can": "write"
        },
        {
          "who": "recipient",
          "of": "friend",
          "can": "read"
        }
      ]
    },
    "friend": {}
  }
}
