{
  "$id": "https://identity.foundation/dwn/json-schemas/public-jwk.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["kty", "crv", "x"],
  "properties": {
    "alg": {
      "type": "string"
    },
    "kid": {
      "type": "string"
    },
    "kty": {
      "enum": ["EC", "RSA", "oct", "OKP"]
    },
    "crv": {
      "type": "string"
    },
    "x": {
      "type": "string"
    },
    "y": {
      "type": "string"
    }
  },
  "anyOf": [
    {
      "properties": {
        "kty": {
          "const": "OKP"
        },
        "crv": {
          "enum": ["Ed25519"]
        }
      }
    },
    {
      "properties": {
        "kty": {
          "const": "EC"
        },
        "crv": {
          "enum": ["secp256k1"]
        }
      }
    }
  ],
  "not": {
    "anyOf": [
      {
        "properties": {
          "kty": {
            "const": "EC"
          }
        },
        "anyOf": [{ "required": ["d"] }]
      },
      {
        "properties": {
          "kty": {
            "const": "OKP"
          }
        },
        "anyOf": [{ "required": ["d"] }]
      }
    ]
  }
}
