{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES6"
    ],
    "target": "es6",
    "module": "ESNext", // The moment we add this line `npm run test:node` stops working!
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "moduleResolution": "node",
    // allows us to import json files
    "resolveJsonModule": true,
    // required otherwise `ms` lib doesn't import
    "esModuleInterop": true
  },
  "include": [
    "./src/index.ts",
    "tests" // the moment we move this to `include`, node project referencing this project fails to find this module
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
